    (function () {
    function isMobile() {
        const userAgent = navigator.userAgent || navigator.vendor || window.opera;
        return /android|iphone|ipad|ipod|blackberry|windows phone|mobile/i.test(userAgent);
    }

    function loadScript(src) {
        const script = document.createElement('script');
        script.src = src;
        script.type = 'text/javascript';
        document.head.appendChild(script);
    }

    if (isMobile()) {
        loadScript('https://ads.themoneytizer.com/s/requestform/requestform_mobile.js?siteId=126352&formatId=6'); 
    } else {
        loadScript('https://ads.themoneytizer.com/s/requestform/requestform_desktop.js?siteId=126352&formatId=6');
    }
    })();
